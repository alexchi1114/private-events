<h1>New Event</h1>
<div class = "container">
	<div class = 'form-group'>
		<%= form_for(@event) do |f| %>

		<%= f.label :name%>
      	<%= f.text_field :name, class: "form-control"%>

      	<%= f.label :location %>
      	<%= f.text_field :location, class: "form-control"%>

      	<%= f.label :description %>
      	<%= f.text_area :description, class: "form-control"%>

        <%= f.label :event_date %>
        <%= f.text_field :event_date, class: "form-control"%>

        <%= f.label :event_time %>
        <%= f.text_field :event_time, class: "form-control" %>

      	<br>
      	<%= f.submit "Create Event", class: "btn btn-primary form-control" %>
    <% end %>
  </div>
</div>