<h1> All Events </h1>
<%= link_to "Create Event", new_event_path %>
<h3>Upcoming Events</h3>
<% @upcoming_events.each do |event|%>
	<div class = "event">
		<h3><%=link_to event.name, event%></h3>
		<h6>Created by: <%= event.creator.name %></h6>
		<h6>Location: <%=event.location%></h6>
		<h6>Date: <%=event.event_date%></h6>
		<h6>Time: <%=event.event_time%></h6>
		<%=event.description%>
	</div>
	<%end%>

<h3>Previous Events</h3>
<% @previous_events.each do |event|%>
	<div class = "event">
		<h3><%=link_to event.name, event%></h3>
		<h6>Created by: <%= event.creator.name %></h6>
		<h6>Location: <%=event.location%></h6>
		<h6>Date: <%=event.event_date%></h6>
		<h6>Time: <%=event.event_time%></h6>
		<%=event.description%>
	</div>
	<%end%>